    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/button_green"
        android:text="Add New"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_green"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_green"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/button1"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:ignore="DuplicateSpeakableTextCheck"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_red"
        android:fontFamily="@font/poppins_semibold"
        android:text="Button2"
        android:textColor="@color/white"
        android:textSize="16sp"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calendar_plantedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gray"
        android:text="Select a date"
        android:padding="20dp"
        android:textColor="@color/h_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_heading_plantedDate"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginBottom="0dp"
        android:text="Name"
        android:textSize="14sp"
        android:textColor="@color/h_light_gray"
        android:fontFamily="@font/poppins_medium"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="0dp"
        android:drawablePadding="14dp"
        android:inputType="text"
        android:background="@drawable/edittext_grey"
        android:textColor="@color/black"
        android:hint="    Enter the Name"
        android:textColorHint="@color/h_light_gray"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="14dp"
        android:drawablePadding="14dp"
        android:background="@drawable/spinner_grey"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/headings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/h_orange"
        android:text="Headings" />

    <TextView
        android:id="@+id/subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/h_gray"
        android:text=" weâ€™ll send an email with instructions to reset your password." />


